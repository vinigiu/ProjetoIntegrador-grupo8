                                    <option value="RR">RR</option>
                                    <option value="SC">SC</option>
                                    <option value="SP">SP</option>
                                    <option value="SE">SE</option>
                                    <option value="TO">TO</option>
                                    <option value="DF">DF</option>
                                </select>
                                <select name="genero" id="genero" value="<%=old.genero%>">
                                    <option selected disabled>Selecione seu gênero:</option>
                                    <option value="Feminino">Feminino</option>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Outro">Outro</option>
                                </select>
                                <input type="password" id="senha" name="senha" placeholder="Senha*" value="<%=old.senha%>"  />
                                <input type="password" id="senha2" name="senha2" placeholder="Confirme sua Senha*" value="<%=old.senha2%>"  />
                                <div class="segurança">
                                    <img src="/images/icones/cadeado.png" width="20rem" />
                                    <h4> Compras 100% seguras!</h4>
                                </div>
                                <h6>Seus dados pessoais estão protegidos, todas suas informações são criptografadas para sua
                                    segurança.</h6>
                                <button type="submit">Criar cadastro</button>
    
                            </form>
                        </div>
